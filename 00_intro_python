def add():
    print("This program adds two numbers.")
    num1 : str = input("Enter your first number: ")
    num1 : int = int(num1)
    num2  : str = input("Enter your second number: ")
    num2 : int = int(num2)
    total : int = num1 + num2
    print("The sum is " + str(total) + ".")

if __name__ == '__main__':
    add()